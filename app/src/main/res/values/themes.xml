<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApplicationAbrAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ApplicationAbrAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApplicationAbrAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ApplicationAbrAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


        <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="contentInsetStart">0dp</item>

    </style>

    <style name="MediumTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>


        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <style name="AppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
        <style name="header_id">
            <item name="android:textSize">20sp</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="listPreferredItemHeightSmall">40dp</item>
        </style>
        <style name="some_id">

            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="listPreferredItemHeightSmall">37dp</item>
        </style>

        <style name="GreenTextInputLayout" parent="@android:style/TextAppearance">
            <item name="android:textColor">#00FF00</item>
        </style>
        <style name="some_idd">
            <item name="android:textSize">24sp</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

        <style name="phone_id">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#D3D3D3</item>
        </style>



        <style name="title">
            <item name="android:textSize">17sp</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

        <style name="number">
            <item name="android:textSize">17sp</item>
            <item name="android:textColor">#5C5C5C</item>
        </style>

</resources>